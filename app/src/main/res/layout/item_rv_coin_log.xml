<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#564F5F"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vPlace"
        android:layout_width="6dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@id/tvDate"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="@id/tvDate"
        android:background="@color/color_gray"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vPlace"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2020.07.24"
        android:layout_marginStart="10dp"
        android:textColor="#5ECB92"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDate"
        android:layout_marginStart="16dp"
        android:text="星期五"
        android:textColor="#6AB68F"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总成长值: 121212"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="@id/tvDate"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="@id/tvDate"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>